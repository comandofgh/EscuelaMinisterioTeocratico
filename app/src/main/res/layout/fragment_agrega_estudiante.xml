<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titulo_agregar_est"
        android:id="@+id/textView10"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/nombre"
        android:layout_below="@+id/textView10" />

    <EditText
        android:id="@+id/etxtnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apellidos"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/etxtnombre" />

    <EditText
        android:id="@+id/etxtapellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sexo"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/etxtapellido" />

    <RadioGroup
        android:id="@+id/rdgsexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_below="@+id/textView3">

        <RadioButton
            android:id="@+id/rbthombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hombre" />

        <RadioButton
            android:id="@+id/rbtmujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mujer" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="end"
        android:layout_below="@+id/rdgsexo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/btncancelaragregaest"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/cancelar"
            android:background="?android:attr/selectableItemBackground"
            android:singleLine="true"
            android:textColor="@color/md_green_500"
            android:padding="8dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnguardaragregaest"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/guardar"
            android:background="?android:attr/selectableItemBackground"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/md_green_500"
            android:padding="8dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>